<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Estate Management Category-->
        <record id="estate_category" model="ir.module.category">
            <field name="name">Estate Management</field>
            <field name="sequence">10</field>
        </record>
        <record id="estate_privilige" model="res.groups.privilege">
            <field name="name">Estate Privilege</field>
            <field name="category_id" ref="estate_category"/>
    </record>
        <!-- Groupe de sécurité pour les utilisateurs(default users)-->
        <record id="estate_user" model="res.groups">
            <field name="name">Estate User</field>
            <field name="privilege_id" ref="estate_privilige"/>
        </record>

        <!-- Groupe de sécurité pour les agents(users) -->
        <record id="estate_agent" model="res.groups">
            <field name="name">Estate Agent</field>
            <field name="privilege_id" ref="estate_privilige"/>
            <field name="implied_ids" eval="[(4, ref('estate_user'))]"/>
        </record>

        <!-- Groupe de sécurité pour les managers(administartors) -->
        <record id="estate_manager" model="res.groups">
            <field name="name">Estate Manager</field>
            <field name="privilege_id" ref="estate_privilige"/>
            <field name="implied_ids" eval="[(4, ref('estate_agent'))]"/><!-- implied_ids : hérite des droits du groupe des agents si je suis admin je suis aussi agent-->
            <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>

        </record>
        <!-- rule pour agent afin d'acceder seulement a leur propre enregistrements-->
        <record id="real_estate_rule_agent_personal" model="ir.rule"> <!-- ir.rule : règle d'accès -->
            <field name="name">Agents : Personal Records Only</field>
            <field name="model_id" ref="model_real_estate"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('estate_agent'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <!-- rule pour admin afin d'avoir accès à tous les enregistrements -->
        <record id="real_estate_rule_admin" model="ir.rule">
            <field name="name">Admins : All Records</field>
            <field name="model_id" ref="model_real_estate"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('estate_manager'))]"/>
        </record>

    </data>
</odoo> 