<odoo>
    <record id="action_estate_tag" model="ir.actions.act_window">
        <field name="name">Estate Tags</field>
        <field name="res_model">estate.tag</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="estate_tag_tree_view" model="ir.ui.view">
        <field name="name">estate.tag.list</field>
        <field name="model">estate.tag</field>
        <field name="arch" type="xml">
            <list string="Estate Tags">
                <field name="name"/>
            </list>
        </field>
    </record>
    <record id="estate_tag_form_view" model="ir.ui.view">
        <field name="name">estate.tag.form</field>
        <field name="model">estate.tag</field>
        <field name="arch" type="xml">
            <form string="Estate Tag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="property_id"/>
                        <field name="property_type_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
