<odoo>
    <!-- =========Search Vue ==========-->
    <record id="view_real_estate_search" model="ir.ui.view">
        <field name="name">real.estate.search</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" invisible="1"/>
                <field name="postcode" invisible="1"/>
                <field name="state" string="Status" invisible="1" filter_domain="[('state','ilike',self)]"/>
                <filter name="filter_new" string="New" domain="[('state','=','new')]"/>
                <filter name="filter_sold" string="Sold" domain="[('state','=','sold')]"/>
                <filter name="filter_cancelled" string="Cancelled" domain="[('state','=','cancelled')]"/>
                <filter name="group_by_postcode" string="Postcode" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>
    <!-- ========== VUE KANBAN ========== -->
   <record id="view_real_estate_kanban" model="ir.ui.view">
    <field name="name">real.estate.kanban</field>
    <field name="model">real.estate</field>
    <field name="arch" type="xml">
        <kanban default_group_by="type_id" records_draggable="false" sample="1">
            <field name="state"/>
            <field name="expected_price"/>
            <field name="best_offer_price"/>
            <field name="selling_price"/>
            <field name="tag_ids"/>
            <progressbar field="state" colors='{"new": "info", "sold": "success", "cancelled": "danger"}' sum_field="expected_price"/> <!-- progressbar pour visualiser l'état de la propriété avec des couleurs différentes -->
            <templates>
                <t t-name="card">
                    <div class="oe_kanban_global_click"> <!-- oe_kanban_global_click : classe pour rendre toute la carte cliquable et ouvrir le formulaire -->
                        <!-- Affichage des informations principales dans le corps de la carte -->
                        <main>
                            <div class="d-flex mb-1">
                                <strong class="o_kanban_record_title text-truncate"> <!-- text-truncate pour éviter le débordement de texte -->
                                    <field name="name"/>
                                </strong>
                            </div>

                            <div>
                                <span>Expected price: </span>
                                <field name="expected_price" widget="monetary"/>
                            </div>

                            <div t-if="record.state.raw_value == 'offer_received'">
                                <span>Beste offer: </span>
                                <field name="best_offer_price" widget="monetary"/>
                            </div>

                            <div t-if="record.state.raw_value == 'sold'">
                                <span>Selling price: </span>
                                <field name="selling_price" widget="monetary"/>
                            </div>
                        </main>
                        <!-- Affichage des tags dans le pied de carte -->
                        <footer class="mt-1">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </footer>
                    </div>
                </t>
            </templates>
        </kanban>
     </field>
    </record>
    <!-- ========== VUE Graph ========== -->
    <record id="view_real_estate_graph" model="ir.ui.view">
        <field name="name">real.estate.graph</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <graph string="Real Estate Analysis" type="bar"><!-- type: bar pour un graphique à barres -->
                <field name="expected_price" type="measure"/><!-- type: measure indique que c'est une valeur numérique à analyser(axe Y) -->
                <field name="best_offer_price" type="measure"/>
                <field name="selling_price" type="measure"/>
                <field name="tag_ids" type="row"/> <!-- type: row indique l'axe des lignes(X) dans le graphique -->
            </graph>
        </field>
    </record>
    <!-- ========== VUE PIVOT ========== -->
    <record id="view_real_estate_pivot" model="ir.ui.view">
        <field name="name">real.estate.pivot</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <pivot string="Real Estate Pivot">
                <field name="selling_price" type="measure"/>
                <field name="type_id" type="row"/>
                <field name="state" type="col"/> <!-- type: col pour l'axe des colonnes dans le tableau croisé dynamique -->
            </pivot>
        </field>
    </record>
    <!-- ========== VUE LISTE(Tree) ========== -->
    <record id="view_real_estate_list" model="ir.ui.view">
        <field name="name">real.estate.list</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <list string="Propriétés" decoration-success="state == 'new'" decoration-info="state == 'sold'" decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="type_id"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="selling_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>
        <!-- ========== VUE FORMULAIRE ========== -->
    <record id="view_real_estate_form" model="ir.ui.view">
        <field name="name">real.estate.form</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <form string="Propriété">
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" 
                            statusbar_visible="new,offer_received,offer_accepted,sold" options="{'clickable': True}"/>
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Titre de la propriété"/>

                        </h1>
                    </div>

                    <!-- Champs principaux -->
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="state" invisible="1"/>
                            <field name="type_id"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_offer_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="orientation"/>
                                <field name="total_area"/>
                            </group>    
                        </page>
                        <page string="Offers">
                            <field name="offers_ids"> <!-- Inline view-->
                                <list decoration-success="status == 'accepted'" decoration-danger="status == 'refused'" editable="bottom">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="status" readonly="1"/>
                                    <field name="validity"/>
                                    <field name="date_deadline" column_invisible="parent.state == 'sold'"/>
                                    <button name="action_accept_offer" type="object" icon="fa-check" 
                                            title="Accept Offer" 
                                           invisible="status in ['accepted']"/>
                                    <button name="action_refuse_offer" type="object" icon="fa-times" 
                                            title="Refuse Offer"
                                            invisible="status in ['refused']"/>
                                </list>
                            </field>
                        </page>
                        <page string="Others">
                            <group>
                                <field name="description"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
     <!-- ========== ACTION ========== -->
    <record id="estate_record" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">real.estate</field>
        <field name="view_mode">graph,kanban,list,form,pivot</field>
        <field name="context">{'search_default_filter_new': True}</field>
    </record>
    <record id="estate_offers_record" model="ir.actions.act_window">
        <field name="name">Estate Offers</field>
        <field name="res_model">estate.offer</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>