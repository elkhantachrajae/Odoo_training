<odoo>
    <!-- ========== ACTION ========== -->
    <record id="estate_record" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">real.estate</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_new': True}</field>
    </record>
    <record id="estate_offers_record" model="ir.actions.act_window">
        <field name="name">Estate Offers</field>
        <field name="res_model">estate.offer</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- =========Search Vue ==========-->
    <record id="view_real_estate_search" model="ir.ui.view">
        <field name="name">real.estate.search</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" invisible="1"/>
                <field name="postcode" invisible="1"/>
                <field name="state" string="Status" invisible="1" filter_domain="[('state','ilike',self)]"/>
                <filter name="filter_new" string="New" domain="[('state','=','new')]"/>
                <filter name="filter_sold" string="Sold" domain="[('state','=','sold')]"/>
                <filter name="filter_cancelled" string="Cancelled" domain="[('state','=','cancelled')]"/>
                <filter name="group_by_postcode" string="Postcode" context="{'group_by':'postcode'}"/>
            </search>
        </field>
    </record>
    <!-- ========== VUE LISTE(Tree) ========== -->
    <record id="view_real_estate_list" model="ir.ui.view">
        <field name="name">real.estate.list</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <list string="Propriétés" decoration-success="state == 'new'" decoration-info="state == 'sold'" decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="selling_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="date_availability"/>
            </list>
        </field>
    </record>
        <!-- ========== VUE FORMULAIRE ========== -->
    <record id="view_real_estate_form" model="ir.ui.view">
        <field name="name">real.estate.form</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <form string="Propriété">
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" 
                            statusbar_visible="new,offer_received,offer_accepted,sold" options="{'clickable': True}"/>
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Titre de la propriété"/>

                        </h1>
                    </div>

                    <!-- Champs principaux -->
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                            <field name="state" invisible="1"/>
                            <field name="type_id"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_offer_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="orientation"/>
                                <field name="total_area"/>
                            </group>    
                        </page>
                        <page string="Offers">
                            <field name="offers_ids"> <!-- Inline view-->
                                <list decoration-success="status == 'accepted'" decoration-danger="status == 'refused'" editable="bottom">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="status" readonly="1"/>
                                    <field name="validity"/>
                                    <field name="date_deadline" column_invisible="parent.state == 'sold'"/>
                                    <button name="action_accept_offer" type="object" icon="fa-check" 
                                            title="Accept Offer" 
                                           invisible="status in ['accepted']"/>
                                    <button name="action_refuse_offer" type="object" icon="fa-times" 
                                            title="Refuse Offer"
                                            invisible="status in ['refused']"/>
                                </list>
                            </field>
                        </page>
                        <page string="Others">
                            <group>
                                <field name="description"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>