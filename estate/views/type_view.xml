<odoo>

<!-- ==========Action===========-->
    <record id="action_estate_type" model="ir.actions.act_window">
        <field name="name">Estate Types</field>
        <field name="res_model">estate.type</field>
        <field name="view_mode">list,form</field>
    </record>

<!-- ==========Tree view===========-->
    <record id="view_estate_type_tree" model="ir.ui.view">
        <field name="name">estate.type.list</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <list string="Estate Types">
                <field name="name"/>
            </list>
        </field>
    </record>

<!-- ==========Form view===========-->
    <record id="view_estate_type_form" model="ir.ui.view">
        <field name="name">estate.type.form</field>
        <field name="model">estate.type</field>
        <field name="arch" type="xml">
            <form string="Estate Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_properties" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="lines_count" widget="line_count"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>